{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true, // ✅ libraries ke types ignore karne ke liye

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting / Type Checking */
    "strict": false, // ✅ strict mode off kar do
    "noUnusedLocals": false, // optional, warnings off
    "noUnusedParameters": false, // optional, warnings off
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": false, // optional
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
